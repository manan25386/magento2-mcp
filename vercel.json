{
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/mcp",
      "dest": "/api/mcp.js"
    },
    {
      "src": "/",
      "dest": "/api/mcp.js"
    }
  ],
  "functions": {
    "api/mcp.js": {
      "maxDuration": 30
    }
  }
}